@model Solo.Domain.NalogBo

@{
    ViewBag.Title = "Registration";
}


            <nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand" href="#">SoloDev</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Store</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Help</a>
                        </li>
                    </ul>
                </div>
            </nav><br><br>
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <h3>Registracija</h3>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "Nisu popunjena sva polja", new { @class = "text-danger" })
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Ime, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Ime, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Ime, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Prezime, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Prezime, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Prezime, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(model => model.JMBG, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.JMBG, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.JMBG, "", new { @class = "text-danger" })
                        </div>
                    </div><br />
                    <div class="mb-3">
                        @Html.LabelFor(model => model.RacunID, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.RacunID, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.RacunID, "", new { @class = "text-danger" })
                        </div>
                    </div><br />
                    <div class="form-check">
                        <label>Izaberite vrstu naloga: </label><br />
                        @Html.RadioButtonFor(model => model.Vrsta, "Korisnik")
                        <label class="control-label">
                            Korisnik
                        </label><br />
                        @Html.RadioButtonFor(model => model.Vrsta, "Developer")
                        <label class="control-label">
                            Developer
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary mt-5 dugme">Registruj se</button>
                </div>       
                    }
                </div>
                <div class="col-md-4"></div>
            </div><br><br>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
