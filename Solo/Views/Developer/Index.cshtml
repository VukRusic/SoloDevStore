
@{
    ViewBag.Title = "Index";
}

<div>
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#">SoloDev</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Store</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="#">Help</a>
                </li>
            </ul>
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="navbar-right navbar-nav ">
                    <li class="nav-item active">
                        <a class="nav-link mr-5"><i class="far fa-user"></i> @User.Identity.Name </a>
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Sign out", "LogOut", "Developer", null, new { @class = "nav-link" })
                    </li>
                </ul>
            }
        </div>
    </nav><br /><br />
    <div class="row" style="color:#e3e3e3">
        <div id="pretraga" class="col-md-6">
            <h4>Registrovani proizvodi</h4>
            <div>
                @{Html.RenderAction("GetRegisteredProizvodsByDeveloper", new { id = ViewBag.Id });}
            </div>
        </div>
        <div class="col-md-6">
            @Html.ActionLink("Kreiraj novi proizvod","AddProizvod", new { id = ViewBag.Id },new { @class = "btn btn-primary" })
            <div class="mt-5 border">
                <h5>Proizvodi u procesu registracije</h5>
                <div>
                    @{Html.RenderAction("GetNonregisteredProizvods", new { id = ViewBag.Id });}
                </div>
            </div>
        </div>
    </div>

</div>

