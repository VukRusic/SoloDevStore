@model Solo.Domain.UserBo
@{
    ViewBag.Title = "Index";
}

<div>
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand">SOLO</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("Help", "Help", "LogReg", null, new { @class = "nav-link" })
                </li>
            </ul>
            @if (User.Identity.IsAuthenticated)
            {
        <ul class="navbar-right navbar-nav ">
            <li class="nav-item active">
                <i class="far fa-user mt-2"></i>
            </li>
            <li class="nav-item active">
                @Html.ActionLink(Model.Username, "PregledNaloga", "Developer", new { userN = Model.Username }, new { @class = "nav-link" })
            </li>
            <li class="nav-item active">
                @Html.ActionLink("Sign out", "LogOut", "LogReg", null, new { @class = "nav-link" })
            </li>
        </ul>
            }
        </div>
    </nav><br /><br />
    <div class="row" style="color:#e3e3e3">
        <div id="pretraga" class="col-md-6">
            <h4>Registrovani proizvodi</h4>
            <div>
                @{Html.RenderAction("GetRegisteredProizvodsByDeveloper", new { id = ViewBag.Id });}
            </div>
        </div>
        <div class="col-md-6">
            @Html.ActionLink("Kreiraj novi proizvod", "AddProizvod", new { id = ViewBag.Id }, new { @class = "btn btn-primary" })
            <div class="mt-5 border">
                <h5>Proizvodi u procesu registracije</h5>
                <div>
                    @{Html.RenderAction("GetNonregisteredProizvods", new { id = ViewBag.Id });}
                </div>
            </div>
        </div>
    </div>

</div>

