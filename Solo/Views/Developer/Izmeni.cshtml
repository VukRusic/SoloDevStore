                    @Html.ActionLink("Obrisi proizvod", "Obrisi", new { id = ViewBag.Id }, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>

        <p class="mt-5">
            <hr />
            <a href="@Url.Action("Index","Developer")" class="btn btn-primary"><i class="fas fa-arrow-circle-left"></i>  Nazad</a>
        </p>

    }


</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
