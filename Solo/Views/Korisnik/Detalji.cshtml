@model Solo.Domain.ProizvodBo

@{
    ViewBag.Title = "Detalji";
}

<div>
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#">SoloDev</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Store</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="#">Help</a>
                </li>
            </ul>
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="navbar-right navbar-nav ">
                    <li class="nav-item active">
                        <a class="nav-link mr-5"><i class="far fa-user"></i> @User.Identity.Name </a>
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Sign out", "LogOut", "Korisnik", null, new { @class = "nav-link" })
                    </li>
                </ul>
            }
        </div>
    </nav><br /><br />
    <div class="row" style="color: #e7e7e7">
        <div class="col-md-4">
            @{ string source = Model.Tema + ".jpg";}
            <img src="~/Img/@source" class="rounded img-thumbnail" style="width:500px; height:230px;" alt="proizvod"/>
            <div class="mt-5 text-center">
                O proizvodu:
            </div>
        </div>
        <div class="col-md-8">
            <div class="row" style="height:220px">
                <div class="col-md-8">
                    <p>Ovde treba da stoji opis koji se cita iz nepostojeceg polja u tabeli proizvod</p>
                </div>
                <div class="col-md-4 mt-5">
                    <div>
                        <div>
                            @Html.DisplayFor(model => model.Cena).00 din
                        </div>
                    </div>
                    <div class="btn-group">
                        <button class="btn btn-primary" type="submit">Kupi</button>
                        <button class="btn btn-primary" type="submit"><i class="fas fa-heart"></i></button>
                    </div>
                </div>
            </div>
            <hr />
            <div>
                <div>
                    Naziv: @Html.DisplayFor(model => model.Tema)
                </div>
                <div>
                    @Html.DisplayNameFor(model => model.Zanr): @Html.DisplayFor(model => model.Zanr)
                </div>

                <div>
                    @Html.DisplayNameFor(model => model.BrojIgraca): @Html.DisplayFor(model => model.BrojIgraca)
                </div>

                <div>
                    @Html.DisplayNameFor(model => model.PrepStarDoba): @Html.DisplayFor(model => model.PrepStarDoba)
                </div>

            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
