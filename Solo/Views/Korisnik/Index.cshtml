@model Solo.Domain.UserBo

@{
    ViewBag.Title = "Index";
}

<div>
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#">SoloDev</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Store</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="#">Help</a>
                </li>
            </ul>
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="navbar-right navbar-nav ">
                    <li class="nav-item active">
                        <a class="nav-link mr-5"><i class="far fa-user"></i> @User.Identity.Name </a>
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Sign out", "LogOut", "Korisnik", null, new { @class = "nav-link" })
                    </li>
                </ul>
            }
        </div>
    </nav><br /><br />
    <div class="input-group" style="width: 40%">
        <input type="text" class="form-control" placeholder="Search" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="button"><i class="fas fa-search"></i></button>
        </div>
    </div><br />
    <div class="row">
        <div class="col-md-4" id="temePretraga">
            <label class="col-form-label">Naziv</label>
            <div>
                @Html.DropDownList(
                "Tema",
                new SelectList(@ViewBag.Tema, "vrednost"),
                "Selektuj naziv proizvoda",
                new
                     {
                    @id = "dropDownTeme",
                         @class = "form-control",
                    @onchange = "OnSelectedTema(this.value)"
                     })
            </div>
        </div>
        <div class="col-md-4">
            <p id="proveratext"></p>
        </div>
    </div>

    <br />
    <div id="igrice">
        @{Html.RenderAction("GetProizvodBySelectedTema", "Korisnik", new { tema = "" });}
    </div>
</div>

<script>
        function OnSelectedTema(tema) {
            var Tema = tema;

        if(Tema === "")
            {
            Tema = "";
            }
            
            $.ajax({
                url: '@Url.Action("GetProizvodBySelectedTema")',
                data: { tema: Tema },
                success:   function(result) {
                    $('#igrice').html(result);
                }
            });
        }
</script>


