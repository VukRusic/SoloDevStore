@model Solo.Domain.NalogBo
@using Solo.Controllers

@{
    ViewBag.Title = "Kupovina";
}

<h2><i class="fas fa-info-circle"></i>  Informacije o transakciji</h2>

<div>
    <h4>Vas nalog:</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">

            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayNameFor(model => model.Ime)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Ime)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Prezime)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Prezime)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.JMBG)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.JMBG)
                </dd>



                <dt>
                    Trenutno stanje racuna:

                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Stanje).00 Din

                </dd>

            </dl>
        </div>
        <div class="col-md-6">
            <div class="img-fluid"> <img src="~/Img/BUY.jpg" style="width:400px; height:312px ;border-radius:10px" /></div>
        </div>


    </div>
</div>
<hr />
<div class="row">

    <div class="col-md-12">
        <h4>Rezultat transakcije:</h4>
        @if (ViewBag.Result)
        {
            <div class="alert alert-success col-md-4" role="alert">
                <p><strong>Uspesno obavljena transakcija!</strong></p>
                <p>Link za preuzimanje proizvoda: @ViewBag.Poruka</p>
            </div>
        }
        else
        {
            <div class="alert alert-danger col-md-4" role="alert">
                <p><strong>Greska: </strong>@ViewBag.Poruka!</p>
            </div>
            <p class="mt-5">
                <hr />
                <a href="@Url.Action("Index","Korisnik",new { id = ViewBag.Proizvod })" class="btn btn-primary"><i class="fas fa-arrow-circle-left"></i>  Nazad</a>
            </p>
        }
    </div>

</div>
<p class="mt-5">
    <hr />
    
    @Html.ActionLink("Info O Placanju", "Uplatnica", "Korisnik", new { id = ViewBag.KupljeniProzivod, username = Model.Username }, new { @class = "btn btn-primary" })
</p>